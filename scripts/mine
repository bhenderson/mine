export mine_path="$(cd "$(dirname "$BASH_SOURCE")/.."; pwd)"
export PATH=$mine_path/bin:$PATH

# define top level function
mine() {
  # copy
  exec 3>&1 4>&1

  {
    while read line; do
      eval "$line"
    done
  } < <(command mine "$@" 3>&1 >&4)

  # close
  exec 3>&- 4>&-
}

mine use default

# vim: ft=sh :
